---
import NavTop from '@/components/NavTop.astro'
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" >
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
  <nav>
    <NavTop />
  </nav>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	html {
		font-family: "Motomangucode", system-ui, sans-serif;
		background: #13151a;
		color: #f1f0e1;
    margin-left: 10px;
    margin-right: 10px;
	}

  @font-face {
        font-family: "Motomangucode";
        src: url("/fonts/Motomangucode.woff2") format("woff2");
        font-weight: 500;
        font-style: normal;
        font-display: swap;
  }
  
  @font-face {
        font-family: "Motomangucode";
        src: url("/fonts/MotomangucodeBold.woff2") format("woff2");
        font-weight: 700;
        font-style: normal;
        font-display: swap;
  }     
      

</style>
