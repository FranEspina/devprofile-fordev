---
const { startDate, endDate } = Astro.props;
import { formatYearInterval } from "@/lib/dates.ts";
import { cn } from "@/lib/utils";

const { classNames } = Astro.props;
---

<time class={cn(classNames, "")}>
  {formatYearInterval(startDate, endDate)}
</time>

<style>
  time {
    color: var(--text-secondary);
    font-size: 0.85rem;
    min-width: 102px;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>
