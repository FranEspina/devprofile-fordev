---
import { getUserResumeSection } from "../../../services/apiService";
import { Basic } from "../../../Schemas/basicSchema";
import { apiResultType } from "../../../types/apiTypes";

const { title } = Astro.props;

const { user } = Astro.params;

const result: apiResultType<Basic[]> = await getUserResumeSection<Basic>(
  "basic",
  Number(user),
);
if (!result || !result.data) {
  return Astro.redirect("/");
}
const basics = result.data[0] || ({} as Basic);
