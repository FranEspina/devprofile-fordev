  console.log("hola");
  const boton = document.getElementById("hola");
  if (boton) {
    console.log("si");
  } else {
    console.log("no");
  }
  document.addEventListener("astro:page-load", () => {
    console.log("dentro astro:page-load");
    if (boton) {
      boton.addEventListener("click", () => {
